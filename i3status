# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ß
# If the above line is not correctly displayed, fix your editor first!

general {
  colors = true
  interval = 10
}

order += "volume master"
order += "battery 1"
order += "load"
order += "disk /"
#order += "disk /home"
order += "ethernet _first_"
order += "wireless _first_"
order += "run_watch VPN"
order += "tztime utc"
order += "tztime est"
order += "tztime local"

wireless _first_ {
  format_up = "W: %essid %ip"
  format_down = "W: down"
}

ethernet _first_ {
  # if you use %speed, i3status requires root privileges
  format_up = "E: %ip (%speed)"
  format_down = "E: down"
}

battery 1 {
  format = "%status %percentage %remaining"
  path = "/sys/class/power_supply/BAT0/uevent"
}

run_watch DHCP {
  pidfile = "/var/run/dhclient*.pid"
}

run_watch VPN {
  pidfile = "/sys/class/net/tun0"
}

tztime est {
  format = "EST: %I:%M:%S"
  timezone = "America/New_York"
}

tztime utc {
  format = "UTC: %H:%M:%S"
  timezone = "Etc/UTC"
}

tztime local {
  format = "MST: %I:%M:%S%P %Y-%m-%d"
}

load {
  format = "L: %1min %5min %15min"
}

disk "/" {
  format = "/ df: %avail"
}

disk "/home" {
  format = "/home/ df: %avail"
}

volume master {
  format = "♪: %volume"
  format_muted = "Muted"
  device = "default"
  mixer = "Master"
  mixer_idx = 0
}
